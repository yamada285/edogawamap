


<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_tag("/maps/create") do %>
      <div class="form">
        <div class="form-body">
          <%= hidden_field_tag :user_id, @user.id %>
          <textarea name="content"></textarea>
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="map-address">

</div>


<div class="post-index">
<img src="<%= "/park_image/#{@map.id}.jpg" %>">
<h1><%= @map.address %></h1>
<h1><%= @map.id %></h1>
  <div class="container">
      <% @posts.each do |posts| %>
        <li class="row col-xl post-index-item">
        <%= posts.user_id %>
        <%= posts.content%>
        </li>
      <% end %>
  </div>
</div>


<%= link_to("戻る",index_path) %>
